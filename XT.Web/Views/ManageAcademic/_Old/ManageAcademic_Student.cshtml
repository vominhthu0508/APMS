@using XT.Web.External

@{
    ViewBag.Title = "[Academic] Quản lý ds HV của lớp";
    var name = "Student";
    var title = ViewBag.Title;
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";

    var classId = ViewBag.ClassID as string;
    var classCount = 10;
    if (classId == "Tất cả")
    {
        classCount = 100;
    }
}

<section class="content-header">
    <h1>@title
        <small>@classId</small>
    </h1>
    <ol class="breadcrumb low">
        <li><a href="@Url.GoAccountAdminFirstPage()"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="@Url.Action("ManageAcademic_Class")">Danh sách lớp</a></li>
        <li class="active">@classId</li>
    </ol>
    @*<div class="breadcrumb">
        <div style="margin-bottom: 10px; margin-top: 10px;">
            <button class="btn btn-warning" data-toggle="modal" data-target="#add-modal">
                <i class="fa fa-plus fa-fw"></i>&nbsp;@name
            </button>
        </div>
    </div>*@
</section>
<section class="content">
    <div class="row ajax-search-group">
        <div class="col-lg-12">
            @Html.Partial("../Admin/_partial_Search_Form", "")
        </div>
        <div class="col-lg-12">
            <div class="Search_Result">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            Tổng cộng @classCount HV
                        </h3>
                        <div class="box-tools">
                            <select name="" class="form-control select2">
                                <option value="1">Studying</option>
                                <option value="2">Delay</option>
                                <option value="2">Dropout</option>
                                <option value="2">Finish</option>
                            </select>
                            <button class="btn btn-warning" data-toggle="modal" data-target="#add-modal">
                                <i class="fa fa-plus fa-fw"></i>&nbsp;@name
                            </button>
                        </div>
                    </div>
                    @Html.Partial("Search_Result/_partial_Search_" + name, classId)
                </div>
            </div>
        </div>
    </div>
</section>