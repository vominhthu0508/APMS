@{
    ViewBag.Title = "[Academic] Quản lý đặt sách";
    var name = "BookOrder";
    var title = ViewBag.Title;
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>@title</h1>
    <div class="breadcrumb">
        <div style="margin-bottom: 10px; margin-top: 10px;">
            <button class="btn btn-warning" data-toggle="modal" data-target="#add-modal">
                <i class="fa fa-plus fa-fw"></i>&nbsp;@name
            </button>
        </div>
    </div>
</section>
<section class="content">
    <div class="row ajax-search-group">
        <div class="col-lg-12">
            @Html.Partial("../Admin/_partial_Search_Form", "")
        </div>
        <div class="col-lg-12">
            <div class="Search_Result">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Chi tiết đặt sách</h3>
                        <div class="box-tools">
                            <select name="" class="form-control select2" style="width: 120px;">
                                <option value="1">All classes</option>
                                <option value="1">C1203L</option>
                                <option value="2">C1204L</option>
                            </select>
                            <select name="" class="form-control select2" style="width: 120px;">
                                <option value="1">Aptech HCM</option>
                                <option value="2">Arena HCM</option>
                            </select>
                            <select name="" class="form-control select2" style="width: 120px;">
                                <option value="0">All semesters</option>
                                <option value="1">Sem 1</option>
                                <option value="2">Sem 2</option>
                                <option value="3">Sem 3</option>
                                <option value="4">Sem 4</option>
                            </select>
                            <select name="" class="form-control select2" style="width: 120px;">
                                <option value="0">All statuses</option>
                                <option value="1">Pending</option>
                                <option value="2">Approved</option>
                            </select>
                            <a href="#" class="btn btn-default" id="daterange-btn">
                                <i class="fa fa-calendar"></i>&nbsp;<i class="fa fa-caret-down"></i>
                            </a>
                        </div>
                    </div>
                    @Html.Partial("Search_Result/_partial_Search_" + name, "")
                </div>
            </div>
        </div>
    </div>
</section>