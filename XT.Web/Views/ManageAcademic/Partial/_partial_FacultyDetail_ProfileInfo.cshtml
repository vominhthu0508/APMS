@using XT.Model;
@using XT.Web.Models;
@using XT.Web.External;

@model Faculty

@{
    var current_user = Model as Faculty;
}

<!-- Profile Image -->
<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" src="@Helper.MyUrlContent_AccountAvatar()" alt="User profile picture">
        <h3 class="profile-username text-center">@current_user.FC_Name</h3>
        <p class="text-muted text-center">@((FacultyTypeEnum)current_user.FC_Type) - <span class="text-green">@((GenderEnum)current_user.FC_Gender)</span></p>

        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>Phone</b> <a class="pull-right">@current_user.FC_Phone</a>
            </li>
            <li class="list-group-item">
                <b>Email</b> <a class="pull-right">@current_user.FC_Email</a>
            </li>
            <li class="list-group-item">
                <b>Skills</b> <a class="pull-right">@current_user.Modules_List.Count()</a>
            </li>
        </ul>

        <a href="@Url.Action("ChangeProfileInfoFaculty", "Admin")" 
            class="btn btn-primary btn-block disabled">
            <b><i class="fa fa-pencil-square-o"></i>&nbsp;Update Profile</b></a>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->

<!-- About Me Box -->
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">About Me</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <strong><i class="fa fa-envelope margin-r-5"></i>Contact</strong>
        <p class="text-muted">
            -	Sex: @((GenderEnum)current_user.FC_Gender)<br />
            -	Mobile Phone: @current_user.FC_Phone<br />
            -	Email: @current_user.FC_Email<br />
            -	Address: @current_user.FC_Address<br />
            -	Company Address: @current_user.FC_Address_Company<br />
            -	Birthday: @current_user.FC_Birthday.ToShortDateString()<br />
            -	Salary: @current_user.FC_Salary/h<br />
            -	Working Hour: @(current_user.FC_WorkingHour)h<br />
            -	CMND: @current_user.FC_CMND<br />
            -	Nơi cấp: @current_user.FC_CMND_NoiCap<br />
            -	Ngày cấp: @current_user.FC_CMND_NgayCap.ToShortDateString()<br />
            -	MST: @current_user.FC_MST<br />
        </p>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
