<form enctype="multipart/form-data" method="post" action="@Url.Action("ImportBookOrder", "ManageAcademic")" class="btn-import bg-green">
    <i class="fa fa-upload fa-fw"></i>
    <span>Import</span>
    <input type="file" class="file" name="uploadFile">
</form>
<div class="modal bootstrap-dialog form-uploading fade size-normal type-info" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="bootstrap-dialog-header">
                    <div class="bootstrap-dialog-close-button" style="display: block;">
                        <button class="close">×</button>
                    </div>
                    <div class="bootstrap-dialog-title">Uploading</div>
                </div>
            </div>
            <div class="modal-body">
                <div class="bootstrap-dialog-body">
                    <div class="bootstrap-dialog-message">
                        <div class="upload-progress-container">
                            <div style="width: 100%; margin-top: 20px;">
                                <div class="progress progress-striped active">
                                    <div id="uploadProgress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="display: none;">
                <div class="bootstrap-dialog-footer"></div>
            </div>
        </div>
    </div>
</div>
