@using XT.Model;
@using XT.BusinessService;
@using XT.Utilities;
@using XT.Web.Models;
@using XT.Web.External;
@using PagedList;
@using PagedList.Mvc;

@model IOrderedEnumerable<IGrouping<DateTime, Timekeeper>>
@{
    //var items = Model.ToList<TimekeeperReportModel>();
    var lstItems = Model as IOrderedEnumerable<IGrouping<DateTime, Timekeeper>>;/*items;*/
    var hasData = lstItems != null && lstItems.Count() > 0;
    var Start_Date = (DateTime)ViewBag.Start_Date;
    var End_Date = (DateTime)ViewBag.End_Date;
    var Start_Date_String = Start_Date.ToString("dd/MM/yyyy");
    var End_Date_String = End_Date.ToString("dd/MM/yyyy");
}
<style>
    .tooltip-inner {
        min-width: 400px;
        min-height: 240px;
    }
</style>
<div class="box">
    @if (hasData)
    {
        var user = ViewBag.Current_User as User_Profile;
        //TimeKeeperHelper.SetTimeStartWorkForUser(user);
        <div class="box-header">
            <h3 class="box-title">Từ <b>@Start_Date_String</b> đến <b>@End_Date_String</b></h3>
        </div>
        <div class="box-body no-padding">
            <table class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Thứ</th>
                        <th>Tên nhân viên</th>
                        @for (int i = 1; i <= 10; i++)
                        {
                        <th>Lần @i</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in lstItems)
                    {
                        <tr>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}", item.Key.Date)
                            </td>
                            <td>
                                @String.Format("{0:ddd}", item.Key.Date)
                            </td>
                            <td>
                                <a href="@Url.GoUserProfile(user.Id)">
                                    @user.User_Profile_Full_Name_Id
                                </a>
                            </td>
                            
                            @if (item.Any())
                            {
                                for (int i = 0; i < 10; i++)
                                {
                                    var elem = item.ElementAtOrDefault(i);
                            <td class="text-nowrap">
                                @if (elem != null && elem.Checkin_Date.IsTimeNullValid())
                                {
                                    if (string.IsNullOrWhiteSpace(elem.IP) && string.IsNullOrWhiteSpace(elem.Photo))
                                    {
                                        <a title="Chấm công máy">
                                            @String.Format("{0:t}", elem.Checkin_Date)
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="javascript:void(0);" class="viewdetail" title="@elem.Photo">
                                            @elem.Checkin_Date.ToHoursString()

                                            @if (!string.IsNullOrEmpty(elem.Photo) && elem.Photo.Contains(".jpg"))
                                            {
                                                <br />
                                                <img class="img-responsive" style="width: 50px;" src="@Helper.MyUrlContent_DefaultImage(elem.Photo)" />
                                            }
                                        </a>
                                        <ul class="list-unstyled data-hide">
                                            <li>Ip: @elem.IP</li>
                                            <li>
                                                Ip Modem: @elem.IP_Modem
                                            </li>
                                            <li class="google-location" data-address="@elem.Location">Location: @elem.Location</li>
                                        </ul>
                                    }
                                }
                            </td>
                                }
                            }
                            else
                            {
                                <td class="text-nowrap"></td>
                                <td class="text-nowrap"></td>
                                <td class="text-nowrap"></td>
                                <td class="text-nowrap"></td>
                                <td class="text-nowrap"></td>
                                <td class="text-nowrap"></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="box-header with-border">
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-ban"></i>Không có dữ liệu nào!</h4>
            </div>
        </div>
    }
</div>
@Html.Partial("_partial_Report_TimeKeeperCalendar", (IEnumerable<CalendarTimeKeeperModel>)ViewBag.Timekeepers)
