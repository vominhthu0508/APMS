@using XT.Model
@using XT.BusinessService
@using XT.Web.Models
@using XT.Web.External

@model User_Profile
@if (Model != null)
{
    var name = ViewBag.EntityName;
    <input type="hidden" value="@Model.Id" name="Id">
    <input type="hidden" value="@Model.Status" name="Status">
    <input type="hidden" value="@Model.User_Profile_Avatar" name="User_Profile_Avatar">
    <input type="hidden" value="@Model.User_Type_Id" name="User_Type_Id">

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Họ tên</label>
                @Html.TextBoxFor(model => model.User_Profile_Name, 
                    new { @class = "form-control", placeholder = "Nhập tên " + name, required = "required" })
            </div>
            <div class="form-group">
                <label>Chức vụ</label><br />
                @Html.Raw(XT.Web.External.ControlUlti.DropDownListFor(typeof(RoleTypeEnum), new { Model.Role_Type_Id }, o => (int)o >= (int)RoleTypeEnum.CH))
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(model => model.User_Profile_Phone, 
                    new { @class = "form-control", required = "required"})
            </div>
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(model => model.User_Profile_Email, 
                    new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label>Ngày sinh</label>
                <input type="text" name="User_Profile_Birthday" 
                                    value="@Model.User_Profile_Birthday.ToDateString()" 
                                    class="form-control monthdatepicker">
            </div>
            <div class="form-group">
                <label>Giới tính</label>
                @Html.RadioButtonFor(m => m.User_Profile_Gender, (int)GenderEnum.Male) Nam
                @Html.RadioButtonFor(m => m.User_Profile_Gender, (int)GenderEnum.Female) Nữ
            </div>
        </div>
    </div>
}
