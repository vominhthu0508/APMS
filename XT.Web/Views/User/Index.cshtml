@using XT.Model
@using XT.BusinessService
@using XT.Web.External
@using PagedList
@using PagedList.Mvc

@model XT.Web.Models.ChangeUserProfileModel

@{
    var title = "Thông tin cá nhân";

    ViewBag.Title = title;
    Layout = "~/Views/Layout/LayoutUser.cshtml";
}

@using (Html.BeginForm("ChangeProfileInfo", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "change-profile-form" }))
{
    @Html.Partial("../Error/_partialErrorHandle")
    <div class="form-group">
        <label class="col-sm-3 control-label" for="abc">@Html.GetResource("Account_ChangeProfileInfo__line14")</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Name,
                    new
                    {
                        @class = "form-control",
                        placeholder = "Nhập họ và tên"
                    })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <span class="clearfix"></span>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label" for="abc">@Html.GetResource("Account_ChangeProfileInfo__line27")</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Email,
                    new
                    {
                        @class = "form-control",
                        placeholder = "Nhập email"
                    })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <span class="clearfix"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-ok"></i>&nbsp;Cập nhật</button>
            <button class="btn btn-default" type="reset"><i class="fa fa-times"></i>&nbsp;Hủy</button>
        </div>
        <span class="clearfix"></span>
    </div>
}
