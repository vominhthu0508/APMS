@using XT.Web.External

<div class="box-body">
    <table class="table table-bordered table-hover dataTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Type</th>
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 1; i <= 20; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>
                        <div class="user-block">
                            <img class="img-circle img-bordered-sm" src="/demo/img/user1-128x128.jpg" alt="user image">
                            <span class="username">
                                <a href="@Url.GoUserProfile()" target="_blank">Nguyễn Văn A</a>
                            </span>
                            <span class="description">Student843164</span>
                        </div>
                    </td>
                    <td>@if (i <= 15)
                        { 
                        <span>C1504L</span>
                        }
                        else
                        {
                        <span>C1509G</span>
                        }</td>
                    <td>
                        @if (i <= 15)
                        { 
                            <span class="badge bg-green">Chính thức</span>
                        }
                        else
                        {
                            <span class="badge bg-yellow">Dự thính</span>
                        }
                    </td>
                    <td class="options">
                        <div class="btn-group pull-left">
                            <a class="btn btn-default" title="Xóa khỏi danh sách">
                                <i class="fa fa-minus fa-fw"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
